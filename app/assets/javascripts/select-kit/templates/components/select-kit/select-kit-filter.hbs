{{input
  tabindex=-1
  class="filter-input"
  placeholder=computedPlaceholder
  autocomplete="off"
  autocorrect="off"
  autocapitalize="off"
  spellcheck=false
  value=filter
  input=onInput
}}

{{#if isLoading}}
  {{loading-spinner size="small"}}
{{else}}
  {{#if icon}}
    {{d-icon icon class="filter-icon"}}
  {{/if}}
{{/if}}
